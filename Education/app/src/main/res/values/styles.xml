<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/actionMenuTextColor</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- 欢迎页背景引用刚才写好的 -->
        <item name="android:windowBackground">@color/SplashColor</item>
    </style>
    <!--对话框样式-->
    <style name="AlertDialog" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">#029ae5</item>
        <item name="android:windowIsFloating">true</item>    <!--是否浮在界面上-->
        <item name="android:windowIsTranslucent">true</item> <!--是否半透明-->
        <item name="android:windowBackground">@drawable/radius</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--设置Toolbar样式-->
    <style name="ToolbarPopupTheme">
        <!--设置弹出菜单文字颜色-->
        <item name="android:textColorPrimary">@android:color/black</item>
        <!--三个点的颜色-->
        <item name="android:textColorSecondary">@android:color/white</item>
        <!-- 弹出层背景颜色 -->
        <item name="android:popupBackground">#ffffff</item>
        <!-- 是否覆盖锚点，默认为true，即盖住Toolbar -->
        <item name="overlapAnchor">false</item>
    </style>
</resources>
