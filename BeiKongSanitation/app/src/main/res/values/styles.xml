<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--设置Toolbar样式-->
    <style name="ToolbarTheme">
        <item name="actionMenuTextColor">#fff</item> <!--颜色-->
        <!--<item name="android:textSize"></item> &lt;!&ndash;字体大小&ndash;&gt;-->
    </style>
    <!--对话框样式-->
    <style name="AlertDialog" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">#029ae5</item>
        <item name="android:windowIsFloating">true</item>    <!--是否浮在界面上-->
        <item name="android:windowIsTranslucent">true</item> <!--是否半透明-->
        <item name="android:windowBackground">@drawable/radius</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>
